<Window x:Class="SpiderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiderManager"
        xmlns:customcontrols="clr-namespace:SpiderManager.CustomControls"
        mc:Ignorable="d"
        Title="SpiderManager" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="0" Margin="5px">
            <Label x:Name="choiseHeader" Content="Линька паука:" FontSize="20" FontFamily="Verdana" Width="367"/>
            <customcontrols:MyNumericUpDown Width="225" Height="37" Margin="0 0 0 5"/>
            <Label x:Name="dateOfEating" Content="Дата последнего кормления:" FontSize="20" FontFamily="Verdana"></Label>
            <DatePicker Width="380" Height="38" FontSize="20" FontFamily="Verdana"/>
            <Button x:Name="Apply" Content="Подтвердить" FontSize="20" FontFamily="Verdana" Margin="0 5 0 0"/>

        </WrapPanel>

    </Grid>
</Window>
