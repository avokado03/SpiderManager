<UserControl x:Class="SpiderManager.CustomControls.MyNumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiderManager.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Value" Grid.Column="0" Text="0" FontSize="20px" FontFamily="Verdana" VerticalAlignment="Center" TextChanged="Value_TextChanged"/>
        <RepeatButton x:Name="Down" Grid.Column="1" Content="-" FontSize="20px" FontFamily="Verdana" Margin="5px" Click="Down_Click"></RepeatButton>
        <RepeatButton x:Name="Up" Grid.Column="2" Content="+" FontSize="20px" FontFamily="Verdana" Margin="5px" Click="Up_Click"></RepeatButton>
    </Grid>
</UserControl>
